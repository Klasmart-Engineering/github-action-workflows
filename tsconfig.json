{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    ".github",
    ".*.js",
    ".*.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.yml"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
